<launch>
    <!-- values passed by command line input -->
    <arg name="model" default="ddrobot" />
    <arg name="gui" default="False" />

    <!-- set these parameters on parameter server -->
    <param name="use_gui" value="$(arg gui)"/>
    <param name="robot_description" command="xacro '$(find machine_vision_bonus)/urdf/$(arg model)/robot.xacro'" />

    <!-- include other necessary launch files -->
    <include file="$(find machine_vision_bonus)/launch/ddrobot_gazebo.launch" />

    <!-- start all necessary nodes -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
    <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" if="$(arg gui)"/>
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find machine_vision_bonus)/config/machine_vision_bonus_rviz.rviz" required="true" />

</launch>