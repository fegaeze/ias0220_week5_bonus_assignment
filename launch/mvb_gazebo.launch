<launch>

    <arg name="robot_name" value="studentbot" />
    <arg name="world_name" default="$(find machine_vision_bonus)/worlds/mvb_playground.world"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)"/>
    </include>

    <!-- Spawn ddrobot -->
    <group ns="ddrobot">
        <param name="tf_prefix" value="ddrobot_tf" />
        <include file="$(find machine_vision_bonus)/launch/mvb_spawn.launch">
            <arg name="model" value="ddrobot" />
            <arg name="init_pose" value="-x 0 -y 0 -z 0.1" />
        </include>
    </group>

    <!-- Spawn student's bot -->
    <group ns="$(arg robot_name)">
        <param name="tf_prefix" value="$(arg robot_name)_tf" />
        <include file="$(find machine_vision_bonus)/launch/mvb_spawn.launch">
            <arg name="model" value="$(arg robot_name)" />
            <arg name="init_pose" value="-x 0 -y -5 -z 0.1" />
        </include>
    </group>
</launch>