<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="ddrobot">

    <xacro:include filename="$(find machine_vision_bonus)/urdf/ddrobot/xacro/chasis.xacro"/>
    <xacro:include filename="$(find machine_vision_bonus)/urdf/ddrobot/xacro/wheels.xacro"/>
    <xacro:include filename="$(find machine_vision_bonus)/urdf/ddrobot/xacro/materials.xacro"/>
    <xacro:include filename="$(find machine_vision_bonus)/urdf/ddrobot/xacro/gazebo.xacro"/>

    <!-- Robot Base Footprint -->
    <link name="base_footprint"></link>

    <!-- Robot Chasis -->
    <xacro:chasis />

    <!-- Robot Wheels -->
    <xacro:wheel prefix="left" offset="0.45" />
    <xacro:wheel prefix="right" offset="-0.45" />

</robot>
